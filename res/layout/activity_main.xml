<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfView"
        android:layout_width="fill_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FF0000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:weightSum="3"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pButtonRotateLeft"
                android:layout_height="wrap_content"
                android:text="rotate l"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pButtonUp"
                android:layout_height="wrap_content"
                android:text="up"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pButtonRotateRight"
                android:layout_height="wrap_content"
                android:text="rotate r"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:weightSum="3"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pButtonLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="left"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pButtonOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="options"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pButtonRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="right"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:weightSum="3"
            android:layout_height="fill_parent"
            android:background="#FF0000"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pButtonZoomIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zoom in"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pButtonDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="down"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pButtonZoomOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zoom out"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>